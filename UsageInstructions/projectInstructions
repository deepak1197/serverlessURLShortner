  GET - https://x9qb4ikv03.execute-api.us-east-1.amazonaws.com/dev/getStats/{shorturl}
functions:
  createShortUrl: udroppyserverless-dev-createShortUrl (1.1 MB)
  getLongUrl: udroppyserverless-dev-getLongUrl (1.1 MB)
  getStats: udroppyserverless-dev-getStats (1.1 MB)